{% extends 'base.html.twig' %}

{% block content %}
<div class="container">
<h2>Ajouter un adhérent Particulier</h2>
{{ form_start(form) }}
{{ form_row(form.lastName, { 'label': 'Nom' }) }}
{{ form_row(form.firstName, { 'label': 'Prénom' }) }}
{{ form_row(form.birthdate, { 'label': 'Date de naissance' }) }}
<label for="email">Email</label>
<input type="email" name="email" required >
<label for="password">Mot de passe </label>
<input type="password" name="password" required>
{{ form_row(form.phoneNumber, { 'label': 'Téléphone' }) }}
{{ form_row(form.address, { 'label': 'Adresse' }) }}
{{ form_row(form.city, { 'label': 'Ville' }) }}
{{ form_row(form.zipCode, { 'label': 'Code postal' }) }}
{{ form_row(form.save, { 'label': 'Ajouter un Particulier'}) }}
{{ form_end(form) }}
</div>
{% endblock %}