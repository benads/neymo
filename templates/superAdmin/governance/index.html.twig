{% extends 'base.html.twig' %}

{% block title %}Governance index{% endblock %}

{% block content %}
    <h1>Governance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Money_name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for governance in governances %}
            <tr>
                <td>{{ governance.id }}</td>
                <td>{{ governance.name }}</td>
                <td>{{ governance.moneyName }}</td>
                <td>
                    <a href="{{ path('governance_show', {'id': governance.id}) }}">show</a>
                    <a href="{{ path('governance_edit', {'id': governance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('governance_new') }}">Create new</a>
{% endblock %}
